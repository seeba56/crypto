<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:id="@+id/rank_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rank_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/rank_tv"
        android:id="@+id/name_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/rank_tv"
        android:layout_marginLeft="5dp"

        android:id="@+id/tag_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/favorites_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"
        android:id="@+id/active_tv"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp"
        android:id="@+id/favorites_button"
        android:background="@color/white"
        android:src="@drawable/favorites_button"


        />



</androidx.constraintlayout.widget.ConstraintLayout>