<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <TextView
        android:id="@+id/about_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ivan Šebetić"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/black"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="400px"
        android:layout_height="400px"
        android:src="@drawable/sebetic"
        app:layout_constraintTop_toBottomOf="@id/about_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button"
        android:id="@+id/about_image"
        />

    <ImageView
        android:layout_width="150px"
        android:layout_height="80px"
        android:src="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_image"
        android:layout_marginTop="100px"
        android:layout_marginLeft="100px"
        android:id="@+id/mail_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mail_icon"
        app:layout_constraintTop_toBottomOf="@id/about_image"
        android:layout_marginTop="100px"
        android:text="ivan.sebetic17@gmail.com"
        android:textSize="18dp"
        android:id="@+id/mail_info_tv"
        />
    <ImageView
        android:layout_width="150px"
        android:layout_height="80px"
        android:src="@drawable/ic_baseline_contact_phone_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mail_icon"
        android:layout_marginTop="50px"
        android:layout_marginLeft="100px"
        android:id="@+id/phone_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/phone_icon"
        app:layout_constraintTop_toBottomOf="@id/mail_info_tv"
        android:layout_marginTop="70px"
        android:text="095/550/5488"
        android:textSize="18dp"
        android:id="@+id/phone_info"
        />

    <ImageView
        android:layout_width="150px"
        android:layout_height="80px"
        android:src="@drawable/ic_baseline_house_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_icon"
        android:layout_marginTop="50px"
        android:layout_marginLeft="100px"
        android:id="@+id/house_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/house_icon"
        app:layout_constraintTop_toBottomOf="@id/phone_info"
        android:layout_marginTop="70px"
        android:text="Hercega Kolomana 53, Đakovo"
        android:textSize="18dp"
        android:id="@+id/adress_info"
        />

    <ImageView
        android:layout_width="150px"
        android:layout_height="80px"
        android:src="@drawable/ic_baseline_school_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house_icon"
        android:layout_marginTop="50px"
        android:layout_marginLeft="100px"
        android:id="@+id/school_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/school_icon"
        app:layout_constraintTop_toBottomOf="@id/adress_info"
        android:layout_marginTop="60px"
        android:text="univ.bacc.ing.comp"
        android:textSize="18dp"
        android:id="@+id/school_info"
        />











</androidx.constraintlayout.widget.ConstraintLayout>